@model WMS.Models.WareHouse
@{
    ViewBag.Title = Resources.Resource.Sửa_Kho_Hàng;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input hidden value="@Model.Id" id="id">
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            @Resources.Resource.edit_warehouse
        </h3>
    </div>
    <!--begin::Form-->
    <div class="card-body">
        <div class="form-group mb-8">
            <div class="alert alert-custom alert-default" role="alert">
                <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
                <div class="alert-text">
                    @Resources.Resource.input_require_correctly
                </div>
            </div>
        </div>
        <form id="form">
            <div class="form-group row">
                <label for="example-password-input" class="col-xl-2 col-lg-2 col-form-label">@Resources.Resource.add_warehouses<span style="color:red"> (*) </span></label>
                <div class="col-lg-10 col-xl-10">
                    <div class="input-group ">
                        <input class="form-control" type="text" placeholder="@Resources.Resource.warehouse_name" id="name" name="name" value="@Model.Name" />
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="example-password-input" class="col-xl-2 col-lg-2 col-form-label">@Resources.Resource.Hàng_tồn_kho_thấp_nhất<span style="color:red"> (*) </span></label>
                <div class="col-lg-10 col-xl-10">
                    <div class="input-group ">
                        <input class="form-control" type="number" name="min" placeholder="@Resources.Resource.Nhập_Số_Lượng_Hàng_Tồn_Kho_Thấp_Nhất" id="min" value="@Model.MinInventory" />
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="example-password-input" class="col-xl-2 col-lg-2 col-form-label">@Resources.Resource.Hàng_tồn_kho_cao_nhất<span style="color:red"> (*) </span></label>
                <div class="col-lg-10 col-xl-10">
                    <div class="input-group ">
                        <input class="form-control" type="number" name="max" placeholder="@Resources.Resource.Nhập_Số_Lượng_Hàng_Tồn_Kho_Cao_Nhất" id="max" value="@Model.MaxInventory" />
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <label for="example-password-input" class="col-xl-2 col-lg-2 col-form-label">@Resources.Resource.description</label>
                <div class="col-lg-10 col-xl-10">
                    <div class="input-group ">
                        <textarea class="form-control" type="text" placeholder="@Resources.Resource.description" id="des">@Model.Description</textarea>
                    </div>
                </div>
            </div>
        </form>        
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-end">
            <div>
                <button style="width: 100px" type="button" onclick="Edit()" class="btn btn-success mr-2">@Resources.Resource.submit</button>
                <a style="width: 100px" href="/WarehouseManagement/WareHouse/Index" type="reset" class="btn btn-secondary">@Resources.Resource.cancel</a>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
           // truyền tài nguyên resources sang js
        var resourceEditWH = {
            "nhaptenkho": "@Html.Raw(Resources.Resource.Vui_Lòng_Nhập_Tên_Kho_Hàng)",
            "nhapslmin": "@Html.Raw(Resources.Resource.Vui_Lòng_Nhập_Số_Lượng_Thấp_Nhất)",
            "nhapslmax": "@Html.Raw(Resources.Resource.Vui_Lòng_Nhập_Số_Lượng_Cao_Nhất)",
            is_not_empty: "@Html.Raw(Resources.Resource.is_not_empty)",
            not_valid_number: "@Html.Raw(Resources.Resource.not_valid_number)",
            min_more_than_max: "@Html.Raw(Resources.Resource.min_more_than_max)",
        };
    </script>
    <script src="~/Areas/WarehouseManagement/assets/js/Warehouse/edit-warehouse.js"></script>
}


